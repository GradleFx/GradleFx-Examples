<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 title="HomeView">
	
	<s:CalloutButton id="calloutButton"
        label="Open callout">
        <s:calloutLayout>
            <s:HorizontalLayout/>
        </s:calloutLayout>
            
        <!-- Define buttons that appear in the callout. -->
        <s:Button label="OK" 
            click="calloutButton.closeDropDown();"/>
        <s:Button label="Cancel" 
            click="calloutButton.closeDropDown();"/>
    </s:CalloutButton>
	
	
</s:View>